---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/Blog/Hero.astro";
import BlogCard from "../../components/Blog/BlogCard.astro";
import ResponsiveCards from "../../layouts/ResponsiveCards.astro";

import type { BlogPost } from "../../types/blog";

const API_URL = import.meta.env.API_URL + "/blogs";

const getBlogs = async (): Promise<BlogPost[] | []> => {
  try {
    const response = await fetch(API_URL);
    const { blogs } = await response.json();
    const dat = blogs.splice(-1);
    return blogs;
  } catch (error) {
    return [];
  }
};

const blogs = await getBlogs();
---

<Layout title="Blog">
  <Hero />
  <ResponsiveCards gap="112px" width="580px">
    {
      blogs.map((blog) => {
        const { description, id, photo_url, title, post_slug, created_at } =
          blog;
        return (
          <BlogCard
            title={title}
            description={description}
            image={photo_url}
            url={id}
            created_at={created_at}
          />
        );
      })
    }
  </ResponsiveCards>
</Layout>
